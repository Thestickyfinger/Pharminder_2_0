<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Farmahomie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/corp</item>
        <item name="colorPrimaryVariant">@color/whiteclaro</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/corp</item>
        <item name="colorSecondaryVariant">@color/corp</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:popupMenuStyle">@style/PopupMenu</item>


    </style>
    <style name="Theme.Farmahomie.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:dropDownHorizontalOffset">-76dp</item>
        <item name="android:dropDownVerticalOffset">-10dp</item>

        <item name="android:popupBackground">@drawable/roundshape</item>
        <item name="android:textAppearanceLargePopupMenu">@color/white</item>
        <item name="android:textColor">@color/corp</item>


    </style>

    <style name="itemTextStyle.dm" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.Pharminder_2_0.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pharminder_2_0.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>